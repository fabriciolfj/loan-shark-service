<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="severity" value="warning"/>

    <module name="TreeWalker">
        <module name="FileTabCharacter"/>
        <!-- Limitação de comprimento do arquivo -->
        <module name="FileLength">
            <property name="max" value="2000"/>
        </module>

        <!-- Limitação de comprimento da linha -->
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>

        <!-- Convenções de nomenclatura -->
        <module name="AbbreviationAsWordInName">
            <property name="ignoreFinal" value="true"/>
        </module>

        <!-- Comprimento máximo do método -->
        <module name="MethodLength">
            <property name="max" value="100"/>
        </module>

        <!-- Máximo de parâmetros em um método -->
        <module name="ParameterNumber">
            <property name="max" value="5"/>
        </module>

        <!-- Identificação do uso de tabs -->
        <module name="FileTabCharacter">
            <property name="eachLine" value="true"/>
        </module>

        <!-- Fixação de nomes de variáveis de instância -->
        <module name="MemberName"/>

        <!-- Checagem de espaçamento de parênteses -->
        <module name="WhitespaceAfter"/>

        <!-- Verificação de importações não utilizadas -->
        <module name="UnusedImports"/>

        <!-- Adicione mais regras conforme necessário -->
    </module>
</module>